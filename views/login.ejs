<%- include ('partials/navbar.ejs') %>

<form class="main-login" action="/authenticate" method="POST" >
    <div class="left-login">
       <div class="epidemix-animacao-full">
        <img src="/imgs/setaExterior.svg" class="seta">
        <img src="/imgs/LogoEpidemix.svg" class="logo-ani">
       </div>
    </div>
    <div class="right-login">
        <div class="card-login">
            <h1>LOGIN</h1>
            <div class="textfield">
                <label for="usuario">E-mail</label>
                <input type="email" name="email" placeholder="email@exemplo.com" required>
            </div>
            <div class="textfield">
                <label for="senha">Senha</label>
                <input type="password" name="password" placeholder="Insira sua senha" required>
            </div>
            <button class="btn-login" type="submit">Login</button>
            <hr>
            <h6 class="txt-possui-conta">NÃ£o possui conta? <a href="/cadastro" class="cadastro-txt">Cadastre-se!</a></h6>
        </div>
    </div>
</form>



